{
    "global": {
        "flair": {
        }
    },

    "flair.app": {
        "app": "myapp.main.App",

        "boot": {
            "env": {
                "isVue": true
            },
            "links": [
                { "rel": "stylesheet", "href": "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" },
                { "rel": "stylesheet", "href": "./assets/css/styles.css" }
            ],            
            "scripts": [
            ],
            "preambles": [
                "./app",
                "./features"
            ],
            "ports": {
            },       
            "bootwares": [
                "flair.boot.DIContainer",
                "flair.boot.VueSetup",
                "flair.boot.ClientRouter"
            ],
            "assemblies": [
            ]
        },

        "di": {
            "container": {
            }
        }
    },
    "worker:flair.app": {
        "boot": {
            "bootwares": [
                "flair.boot.DIContainer"
            ]
        }
    },

    "flair.client": {
        "view": {
            "transition": "",
            "static": {
                "root": "./pages/"
            },            
            "routes": {
                "home": "myapp.main.home",
                "notfound": "myapp.main.notfound"
            }
        }, 

        "i18n": {
            "lang": {
                "default": "en",
                "locales": [
                    { "code": "en", "name": "English", "native": "English" },
                    { "code": "hi", "name": "Hindi", "native": "हिंदी" }
                ]
            }
        },

        "routing": {
            "mounts": {
                "main": "/"
            },
            "all": {
                "before": {
                    "settings": [
                        { "name": "hashbang", "value": false },
                        { "name": "lang", "value": false },
                        { "name": "sensitive", "value": false }
                    ],
                    "interceptors": [
                    ]
                },
                "after": {
                    "settings": [
                    ],
                    "interceptors": [
                    ]
                }
            },
            "main": {
                "settings": [
                ],
                "interceptors": [
                ]
            }
        }
    },

    "flair.client.vue": {
        "vue": {
            "extensions": []
        },

        "static": {
            "layout": "myapp.shared.views.CommonLayout",
            "i18n": "./pages/locales"
        }         
    }
}